{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",
        "lib": ["ES2021", "DOM"],
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": false,
        "declaration": false,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "preserveConstEnums": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src"
    },
    "include": ["src/**/*"]
}
